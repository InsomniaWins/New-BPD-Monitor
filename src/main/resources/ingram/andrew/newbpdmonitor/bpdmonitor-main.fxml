<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="360.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ingram.andrew.newbpdmonitor.BPDMonitorController">
   <tabs>
      <Tab text="Open Calls">
         <content>
            <BorderPane>
               <top>
                  <HBox prefHeight="50.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
                     <children>
                        <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                           <children>
                              <Label maxHeight="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" text="Next check in 2 minutes." HBox.hgrow="ALWAYS" />
                              <Button fx:id="getOpenCallsButton" alignment="CENTER" contentDisplay="CENTER" minWidth="-Infinity" mnemonicParsing="false" onAction="#onOpenCallsButtonPressed" text="Force Check" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </top>
               <center>
                  <SplitPane dividerPositions="0.5" orientation="VERTICAL" BorderPane.alignment="CENTER">
                     <items>
                        <VBox alignment="CENTER">
                           <children>
                              <Label text="Call Details" />
                              <TableView fx:id="openCallsTable" VBox.vgrow="ALWAYS">
                                <columns>
                                  <TableColumn prefWidth="75.0" text="Agency" />
                                  <TableColumn prefWidth="75.0" text="Service" />
                                    <TableColumn prefWidth="75.0" text="Start Time" />
                                    <TableColumn prefWidth="75.0" text="ID" />
                                    <TableColumn prefWidth="75.0" text="Nature" />
                                    <TableColumn prefWidth="75.0" text="Address" />
                                </columns>
                              </TableView>
                           </children>
                        </VBox>
                        <BorderPane>
                           <center>
                              <ScrollPane hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0">
                                 <content>
                                    <VBox prefHeight="150.0" />
                                 </content>
                              </ScrollPane>
                           </center>
                           <top>
                              <Label text="Calls Detected" BorderPane.alignment="CENTER" />
                           </top>
                        </BorderPane>
                     </items>
                  </SplitPane>
               </center>
               <right>
                  <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <top>
                        <VBox alignment="CENTER" prefHeight="45.0" prefWidth="230.0" BorderPane.alignment="CENTER">
                           <children>
                              <Label alignment="CENTER" maxWidth="1.7976931348623157E308" minWidth="-Infinity" text="Search Terms" />
                              <HBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="220.0" spacing="5.0">
                                 <children>
                                    <TextField>
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </TextField>
                                    <Button alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Add" HBox.hgrow="ALWAYS">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </VBox.margin>
                              </HBox>
                           </children>
                        </VBox>
                     </top>
                     <center>
                        <ScrollPane hbarPolicy="NEVER" BorderPane.alignment="CENTER">
                           <content>
                              <VBox fx:id="searchTermsVBox" prefHeight="200.0" prefWidth="100.0" />
                           </content>
                        </ScrollPane>
                     </center>
                  </BorderPane>
               </right>
            </BorderPane>
         </content>
      </Tab>
      <Tab text="Closed Calls">
        <content>
            <BorderPane>
               <top>
                  <HBox prefHeight="50.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="getClosedCallsButton" mnemonicParsing="false" onAction="#onClosedCallsButtonPressed" text="Get Closed Calls" />
                        <Button fx:id="saveClosedCallsButton" mnemonicParsing="false" onAction="#onSaveClosedCallsButtonPressed" text="Save To Text FIle" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </top>
               <center>
                  <TableView fx:id="closedCallsTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <columns>
                        <TableColumn prefWidth="75.0" text="Agency" />
                        <TableColumn prefWidth="75.0" text="Service" />
                        <TableColumn prefWidth="75.0" text="Start Time" />
                        <TableColumn prefWidth="75.0" text="Close Time" />
                        <TableColumn prefWidth="75.0" text="ID" />
                        <TableColumn prefWidth="75.0" text="Nature" />
                        <TableColumn prefWidth="75.0" text="Address" />
                     </columns>
                  </TableView>
               </center>
            </BorderPane>
        </content>
      </Tab>
   </tabs>
</TabPane>
